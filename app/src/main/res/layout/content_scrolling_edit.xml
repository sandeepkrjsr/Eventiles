<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/nibble_space"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="@dimen/byte_space"
                android:background="@color/white"
                android:elevation="@dimen/bit_space">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/poster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <!--<ImageView
                    android:id="@+id/poster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/image_gradient" />-->

                <ImageButton
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_card_image" />

                <EditText
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/transparent"
                    android:hint="Eventiles *"
                    android:inputType="textCapWords"
                    android:padding="@dimen/big_space"
                    android:textSize="@dimen/big_space" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/byte_space"
                android:background="@color/white"
                android:elevation="@dimen/bit_space"
                android:orientation="vertical"
                android:padding="@dimen/byte_space">

                <TextView
                    android:id="@+id/type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:hint="Cultural Fest"
                    android:padding="@dimen/nibble_space"
                    android:textColor="@color/black"
                    android:textSize="@dimen/default_space" />

                <EditText
                    android:id="@+id/institute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:drawableLeft="@drawable/ic_detail_institute"
                    android:drawablePadding="@dimen/byte_space"
                    android:gravity="center_vertical"
                    android:hint="KIIT University *"
                    android:inputType="textCapWords"
                    android:padding="@dimen/nibble_space"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small_space" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <EditText
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="@color/transparent"
                        android:drawableLeft="@drawable/ic_detail_location"
                        android:drawablePadding="@dimen/byte_space"
                        android:gravity="center_vertical"
                        android:hint="Bhubaneswar *"
                        android:inputType="textCapWords"
                        android:padding="@dimen/nibble_space"
                        android:textAlignment="gravity"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small_space" />

                    <TextView
                        android:id="@+id/state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="@color/transparent"
                        android:hint="Orissa"
                        android:padding="@dimen/nibble_space"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small_space" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/byte_space"
                android:background="@color/white"
                android:elevation="@dimen/bit_space"
                android:orientation="vertical"
                android:padding="@dimen/byte_space">

                <TextView
                    android:id="@+id/date_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:drawableLeft="@drawable/ic_detail_date_start"
                    android:drawablePadding="@dimen/nibble_space"
                    android:gravity="center_vertical"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:hint="Starts* at Sunday, 02 March 2017"
                    android:padding="@dimen/byte_space"
                    android:textSize="@dimen/small_space" />

                <TextView
                    android:id="@+id/date_ends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:drawableLeft="@drawable/ic_detail_date_ends"
                    android:drawablePadding="@dimen/nibble_space"
                    android:gravity="center_vertical"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:hint="Ends at Wednesday, 05 March 2017"
                    android:padding="@dimen/byte_space"
                    android:textSize="@dimen/small_space" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/byte_space"
                android:background="@color/white"
                android:elevation="@dimen/bit_space"
                android:orientation="vertical"
                android:padding="@dimen/byte_space">

                <EditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:drawableLeft="@drawable/ic_detail_description"
                    android:drawablePadding="@dimen/byte_space"
                    android:gravity="center_vertical"
                    android:hint="KIIT Student : Rs. 200 per person\nnon-KIIT Student : Rs. 500 per person"
                    android:padding="@dimen/nibble_space"
                    android:textAlignment="gravity"
                    android:textSize="@dimen/small_space" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_margin="@dimen/byte_space"
                    android:background="@color/divider" />

                <EditText
                    android:id="@+id/contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:drawableLeft="@drawable/ic_detail_contact"
                    android:drawablePadding="@dimen/byte_space"
                    android:gravity="center_vertical"
                    android:hint="7064009031 (Sandeep)\n8235365517 (Pankaj)"
                    android:padding="@dimen/nibble_space"
                    android:textAlignment="gravity"
                    android:textSize="@dimen/small_space" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_margin="@dimen/byte_space"
                    android:background="@color/divider" />

                <EditText
                    android:id="@+id/mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:drawableLeft="@drawable/ic_detail_mail"
                    android:drawablePadding="@dimen/byte_space"
                    android:gravity="center_vertical"
                    android:hint="sandeepkr.jsr1@gmail.com\npankajkumarsingh@gmail.com"
                    android:padding="@dimen/nibble_space"
                    android:textAlignment="gravity"
                    android:textSize="@dimen/small_space" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/byte_space"
                android:background="@color/white"
                android:elevation="1dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@color/white"
                    android:text="Website"
                    android:textColor="@color/blue_dark" />

                <Button
                    android:id="@+id/facebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@color/blue_dark"
                    android:text="Facebook"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/geturl"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </WebView>
        <EditText
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/divider"
            android:drawableLeft="@drawable/ic_detail_web"
            android:drawablePadding="@dimen/default_space"
            android:gravity="center_vertical"
            android:hint="or Enter URL"
            android:textSize="@dimen/small_space"
            android:padding="@dimen/default_space"
            android:textAlignment="gravity"
            android:layout_alignTop="@+id/url"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="75dp"
            app:srcCompat="@drawable/ic_detail_copy"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <Button
        android:id="@+id/upload"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:text="Submit"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:layout_marginTop="@dimen/byte_space"/>

</LinearLayout>
